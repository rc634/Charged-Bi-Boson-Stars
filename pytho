import numpy as np
import matplotlib.pyplot as plt
import sounddevice as sd

# Set the sample rate and the chunk size
sample_rate = 44100
chunk_size = 1024

# Set up the microphone input stream
stream = sd.InputStream(samplerate=sample_rate, blocksize=chunk_size)

# Start the stream
with stream:
    while True:
        # Read the audio data from the microphone
        audio_data = stream.read(chunk_size)[0]
        
        # Compute the Fourier transform of the audio data
        fourier_transform = np.fft.fft(audio_data)
        
        # Plot the Fourier transform
        plt.plot(np.abs(fourier_transform))
        plt.show()
